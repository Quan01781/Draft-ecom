<script>
    const newProduct = [
        {
            image: "./images/product-1.png",
            productName: "Woman Product 1",
            productPrice: "1000",
        },
        {
            image: "./images/product-2.png",
            productName: "Woman Product 2",
            productPrice: "1000",
        },
        {
            image: "./images/product-3.png",
            productName: "Woman Product 3",
            productPrice: "1000",
        },
        {
            image: "./images/product-4.png",
            productName: "Woman Product 4",
            productPrice: "1000",
        },
    ];

    var newProductElems = newProduct.map((item) => {
        const newProductElement = `
    <div class="col-3 justify-content-center card-row">
        <div class="card border-0"  style="width: 12rem">
            <img
            src="${item.image}"
            class="card-img-top"
            alt="..."
            />
            <div class="card-body">
            <h5 class="card-title">${item.productName}</h5>
            <p class="card-text">
                Some quick example text to build on the card title and
                make up the bulk of the card's content.
            </p>
            <p class="card-text">
                ${item.productPrice}
            </p>
            <button class="btn btn-primary" onclick="onItemClick('${item.productName}')">Add to cart</button>
            </div>
        </div>
    </div>
    `;

        return newProductElement;
    }).join('');

    const newProductContainerElem = document.getElementById("new-product-container");
    newProductContainerElem.innerHTML = newProductElems;


